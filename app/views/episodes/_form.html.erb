<% form_for(@episode) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :embed_tag %><br />
    <%= f.text_area :embed_tag %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label :series_id %><br />
    <%= f.text_field :series_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>